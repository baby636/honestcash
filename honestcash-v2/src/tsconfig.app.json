{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "moduleResolution": "node",
    "baseUrl": "./",
    "types": [],
    "paths": {
      "@app/*": ["app/*"],
      "@core/*": ["app/core/*"],
      "@config/*": ["app/config/*"],
      "@modules/*": ["app/modules/*"],
      "@models/*": ["app/models/*"],
      "@services/*": ["app/services/*"],
      "@shared/*": ["app/shared/*"],
      "@store/*": ["app/store/*"],
      "@assets/*": ["assets/*"],
      "@env/*": ["environments/*"]
    },
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
