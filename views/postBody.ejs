
<div class="container">
<div>
    <div class="row">
        <h1 class="text-center"><%- post.title %></h1>

        <h5>	
            <span class="hashtag" style="padding:3px;" ><%- post.createdAt %></span> 
            <span style="padding:3px;"><span>Honest Cash</span></span> 
        </h5>
    </div>

    <% if (post.parentPost) { %>
      Response to <a href="/<%- post.parentPost.user.username %>/<%- post.parentPost.alias %>">"<%- post.parentPost.title %>"</a> by <a href="/profile/<%- post.parentPost.user.username %>"><%- post.parentPost.user.username %></a>
    <% }  %>

    <div class="row">
        <ul>
            <li style="vertical-align:middle">
                <a href="/profile/<%- post.user.username %>"><span><%- post.user.username %></span></a>
            </li>
        </ul>
    </div>

    <div class="row">
        <article>
            <%- post.body %>
        </article>
    </div>
	
  <div class="row">
		<p>
		<% for (var index = 0; index < upvotes.length; index++ ) { %>
		    <div style="margin:10px;" class="upvote" >
          <a  href="/profile/<%- upvotes[index].user.username %>">
            <%- upvotes[index].user.username %>
          </a>

          <a  href="https://bch.btc.com/<%- upvotes[index].txId %>">
            Receipt
          </a>
        </div>
		<% }  %>
	  </p>
	</div>

	<div class="row">
		<p>
		<% for (var index = 0; index < post.userPostHashtags.length; index++ ) { %>
		    <div style="margin:10px;" class="hashtag" ><a  href="/hashtag/<%- post.userPostHashtags[index].hashtag %>">#<%- post.userPostHashtags[index].hashtag %></a></div>
		<% }  %>
	  </p>
	</div>


    <div class="row">
        <div style="margin:10px;" class="post-response">
            <h3>Responses</h3>
        </div>
        <% for (var index = 0; index < responses.length; index++ ) { %>
          <hr />
          <%- include('response', { response: responses[index] }); %>
        <% }  %>
	</div>
</div>
